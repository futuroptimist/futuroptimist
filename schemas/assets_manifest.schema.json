{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AssetsManifest",
  "type": "object",
  "required": ["footage_dirs"],
  "additionalProperties": false,
  "properties": {
    "footage_dirs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^footage/.*"
      }
    },
    "labels_files": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^footage/.*labels\\.json$"
      }
    },
    "notes_file": { "type": "string" },
    "capture_date": { "type": "string", "format": "date" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}


